
@model List<VarastoApi.Backend.Materiaali>

<!--Nämä sitten erilliseen tyylitiedostoon sitten-->
<style>
    /*Taulujen tyyli*/
    table, th, td {
        border: 1px solid black;
        padding: 5px;
    }
    table {
        border-spacing: 10px;
    }
    /*Lomakkeiden tyyli ja formatointi*/
    input {
        width: 240px;
    }
    .col-25 {
        float: left;
        width: 10%;
        margin-top: 5px;
    }
    .col-75 {
        float: left;
        width: 75%;
        margin-top: 5px;
    }
    /*Clear floats after the columns*/
    .row:after {
        content: "";
        display: table;
        clear: both;
    }
</style>

<h1>VarastoApi</h1>
<hr />
<h2>Varaston sisältö</h2>
<!--Taulu varastossa oleville tavaroille-->
<div class="row">
    <div class="col-75">
        <table>
            <tr>
                <th>ID</th>
                <th>Nimi</th>
                <th>Koko</th>
                <th>Määrä</th>
                <th>Kommentit</th>
            </tr>
            <!--Täytetään taulu loopilla-->
            @foreach (var item in @Model)
            {
                <tr>
                    <td>@item.Id</td>
                    <td>@item.Nimi</td>
                    <td>@item.Koko</td>
                    <td>@item.Maara</td>
                    <td>-</td>
                </tr>
            }
        </table>
    </div>
</div>
<!--Uuden tavaran/materiaalin lisäys varastoon-->
<h2>Uuden tavaran/materiaalin lisäys</h2>
<form>
    <fieldset>
        <legend>Uusi tavara/materiaali</legend>
        <div class="row">
            <div class="col-25">
                <label for="nimi">Nimi :</label><br>
            </div>
            <div class="col-75">
                <input type="text" id="nimi" name="nimi"><br>
            </div>
        </div>
        <div class="row">
            <div class="col-25">
                <label for="maara">Määrä :</label><br>
            </div>
            <div class="col-75">
                <input type="text" id="maara" name="maara"><br>
            </div>
        </div>
        <div class="row">
            <div class="col-25">
                <label for="koko">Koko :</label><br>
            </div>
            <div class="col-75">
                <input type="text" id="koko" name="koko"><br>
            </div>
        </div>
        <div class="row">
            <div class="col-25">
                <label for="komm">Kommentit :</label><br>
            </div>
            <div class="col-75">
                <textarea name="komm" id="komm" style="width:240px; height:180px"></textarea><br><br>
            </div>
        </div>
        <div class="row">
            <div class="col-25">
            </div>
            <div class="col-75">
                <input type="submit" onclick="alert('Ilmoitus')" value="OK">
            </div>
        </div>
    </fieldset>
</form>

