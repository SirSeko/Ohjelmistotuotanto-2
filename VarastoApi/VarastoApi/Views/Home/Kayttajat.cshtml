@model VarastoApi.Models.Kayttajat

@{
    ViewBag.Title = "Kayttajat";
}
<style>

    /*Taulujen tyyli*/
    table, th, td {
        border: 1px solid black;
        padding: 5px;
    }

    table {
        border-spacing: 10px;
    }
    /*Lomakkeiden tyyli ja formatointi*/
    input {
        width: 240px;
    }

    .col-25 {
        float: left;
        width: 20%;
        margin-top: 5px;
    }

    .col-75 {
        float: left;
        width: 75%;
        margin-top: 5px;
    }
    /*Clear floats after the columns*/
    .row:after {
        content: "";
        display: table;
        clear: both;
    }
</style>
@section scripts {

    <script src="http://code.jquery.com/jquery-1.11.3.min.js"></script>

    <link href="https://cdn.datatables.net/1.10.20/css/jquery.dataTables.min.css" rel="stylesheet" type="text/css" />
    <link href="https://cdn.datatables.net/buttons/1.6.1/css/buttons.dataTables.min.css" rel="stylesheet" type="text/css" />
    <link href="https://cdn.datatables.net/responsive/2.2.3/css/responsive.dataTables.min.css" rel="stylesheet" type="text/css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/jquery-modal/0.9.1/jquery.modal.min.css" />

    <script src="https://cdn.datatables.net/1.10.20/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/buttons/1.6.1/js/dataTables.buttons.min.js"></script>
    <script src="https://cdn.datatables.net/buttons/1.6.1/js/buttons.colVis.min.js"></script>
    <script src="https://cdn.datatables.net/responsive/2.2.3/js/dataTables.responsive.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-modal/0.9.1/jquery.modal.min.js"></script>
    <script>

        //Javascript funktioita

        $(document).ready(function () { //Kun sivun lataus valmis suoritetaan seuraaavat

            //Datatables funktiot lähde: https://datatables.net/ //
            $('table.display').DataTable({ //Käytetään datatablesia jossa seuraavat toiminnot select, ordering
                select: true,
                ordering: true,
                paging: false,
                responsive: true,
                dom: 'Bfrtip', //Datatables napit
                language: {
                    buttons: {
                        colvisRestore: "Palauta", //Muutetaan napin nimi koska muuten se olisi englanniksi
                        colvis: "Rivit"

                    }
                },
                buttons: [ //Määritellään mitän nappeja halutaan käyttää
                    {
                        extend: 'colvis', //Datatablesin omia nimityksiä napeille.
                        postfixButtons: ['colvisRestore']
                    }
                ],

            });


        });

    </script>
}
<h2>Käyttäjät</h2>
<div class="row">
    <div class="col-75">
        <table id="" class="display">
            <thead>
                <tr>
                    <th>Käyttäjänimi</th>
                    <th>Valtuus</th>
                    <th>Muokkaa</th>
                </tr>
            </thead>
            <!--Täytetään taulu-->
            <tbody>
                @foreach (var item in @Model.Lista)
                {

                    <tr>
                        <td>@item.Kayttajanimi</td>
                        <td>@item.Valtuus</td>
                        <td>
                            @Html.ActionLink("Muokkaa", "EditU", new { id = item.Kayttajanimi }, new { @class = "btn edit" })|

                            @Html.ActionLink("Poista", "DeleteU", new { id = item.Kayttajanimi }, new { onclick = "return confirm('Haluatko poistaa käyttäjän?');" })
                        </td>
                    </tr>

                }
            </tbody>
        </table>
    </div>
</div>

@using (Html.BeginForm("Register", "Home", FormMethod.Post))
{
    {
        @Html.AntiForgeryToken()
        <fieldset>
            <legend>Rekisteröi käyttäjä</legend>
            <div class="row">
                <div class="col-25">
                    <label for="kayttajanimi">Käyttäjänimi : </label>
                </div>
                <div class="col-75">
                    <input type="text" id="kayttajanimi" name="kayttajanimi"><br>
                </div>
            </div>
            <div class="row">
                <div class="col-25">
                    <label for="Valtuus">Valtuustaso :</label>
                </div>
                <div class="col-75">
                    <select id="valtuus" name="valtuus" style="width:240px;">
                        <option value="1">Oppilas</option>
                        <option value="2">Opettaja</option>
                    </select>
                </div>
            </div>
            <div class="row">
                <div class="col-25">
                    <label for="salasana">Salasana : </label>
                </div>
                <div class="col-75">
                    <input type="password" id="salasana" name="salasana"><br>
                </div>
            </div>
        </fieldset>
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Lisää" class="btn btn-default" />
            </div>
        </div>
    }
}